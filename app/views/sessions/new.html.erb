<% provide(:title, "Sign in") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Sign in to Rhemaholic</h1>
      <div class="account-wall">
        <%= image_tag "bible.png", alt: "Bible", class: "profile-img" %>
        <div class="form-signin">
          <%= form_for(:session, url: sessions_path) do |f| %>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
            <label class="checkbox pull-left">
              <%= check_box_tag (:remember_me) %>
              Remember me
          </label>
          <% end %>
          <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
        </div>
      </div>
      <%= link_to "Create an account", signup_path, class: "text-center new-account" %>
    </div>
  </div>
</div>