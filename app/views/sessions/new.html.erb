<% provide(:title, "Sign in") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <div class="account-wall">
        <%= image_tag "favicon.png", alt: "Logo", class: "profile-img" %>
        <div class="form-signin">
          <%= form_for(:session, url: sessions_path) do |f| %>
            <%= f.text_field :email, class: "form-control", placeholder: "Email", required: 'required', autofocus: 'autofocus' %>
            <%= f.password_field :password, class: "form-control", placeholder: "Password (6 characters minimum)", required: 'required', minlength: "6", maxlength: "20" %>
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Keep me logged in on this device</span>
            <% end %>
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block" %>
          <% end %>
          <script>
            $("form").validate();
          </script>
          <br>
          <div class="text-center"><%= link_to "I forgot my password!", new_password_reset_path, class: "need-help" %></div>
        </div>
      </div>
      <p class= "text-center new-account">New user? <%= link_to "Create an account", signup_path %> now!</p>
    </div>
  </div>
</div>