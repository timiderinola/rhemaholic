<div class="panel-body">
  <div class="row">
    <p>
      <%= link_to gravatar_for(current_user, size: 100), current_user, class: "img-responsive" %>
    </p>
    <%= link_to current_user do %>
        <p class="lead">
          <%= current_user.name %><br>
          @<%= current_user.username %>
        </p>
    <% end %>
    <p><%= render 'shared/stats' %></p>
  </div>
</div>