<%= provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-5">
    <aside class="span4 panel panel-default">
      <section class="panel-body">
        <div class="row">
          <%= gravatar_for @user, size: 150 %>
        </div>
        <section class="stats">
          <h3 style="text-align: left;"><%= @user.name %></h3>
          <%= render 'shared/stats' %>
        </section>
        <%= render 'follow_form' if signed_in? %>
      </section>
    </aside>
  </div>
  <div class="col-md-7">
    <% if @user.microposts.any? %>
      <h4>Posts (<%= @user.microposts.count %>) </h4>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
