<%= provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <aside class="span4">
      <section>
        <h1>
          <%= gravatar_for @user, size: 150 %>
        </h1>
      </section>
      <h2 style="text-align: left;"><%= @user.name %></h2>
    </aside>
  </div>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Posts (<%= @user.microposts.count %>) </h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
