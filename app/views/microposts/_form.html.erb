<%= form_for(@micropost) do |f| %>
    <% if @micropost.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@micropost.errors.count, 'error') %> prohibited this message from being saved:</h2>

          <ul>
            <% @micropost.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.text_field :title, class:'form-control', placeholder:'Give your post a title', required: true %>
          </div>
          <div class="col-sm-6">
            <%= f.select :category, options_for_select([ 'Psalm', 'Hymn', 'Song', 'Meditation', 'Prayer', 'Lesson', 'Story', 'Question' ]), prompt: 'Select a category', required: true, class:'form-control' %>
          </div>
        </div>
      </div>
    </div>
    <div class="field">
      <%= f.cktext_area :content, :ckeditor => {:language => 'en', required: true} %>
    </div>
    <div class="actions">
      <%= f.submit 'Save Post', class:'btn btn-primary pull-right' %>
    </div>
<% end %>
